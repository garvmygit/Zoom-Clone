<div class="auth-container">
  <div class="auth-background">
    <div class="auth-gradient"></div>
  </div>
  
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-logo">
        <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="48" height="48" rx="12" fill="url(#gradient)"/>
          <path d="M24 12L32 20H28V28H20V20H16L24 12Z" fill="white"/>
          <path d="M12 32L20 24V28H28V24L36 32L28 40H20L12 32Z" fill="white" opacity="0.8"/>
          <defs>
            <linearGradient id="gradient" x1="0" y1="0" x2="48" y2="48" gradientUnits="userSpaceOnUse">
              <stop stop-color="#6366f1"/>
              <stop offset="1" stop-color="#8b5cf6"/>
            </linearGradient>
          </defs>
        </svg>
      </div>
      <h1 class="auth-title">Welcome to ScreenX</h1>
      <p class="auth-subtitle">Sign in to continue to your meetings</p>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="auth-alert auth-alert-error">
        <svg class="auth-alert-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M10 0C4.48 0 0 4.48 0 10s4.48 10 10 10 10-4.48 10-10S15.52 0 10 0zm1 15H9v-2h2v2zm0-4H9V5h2v6z" fill="currentColor"/>
        </svg>
        <span><%= error %></span>
      </div>
    <% } %>

    <form action="/auth/login" method="post" class="auth-form">
      <div class="auth-input-group">
        <label for="email" class="auth-label">
          <svg class="auth-input-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M2.5 6.66667L10 11.6667L17.5 6.66667M2.5 13.3333H17.5V6.66667H2.5V13.3333Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Email address
        </label>
        <input 
          type="email" 
          id="email"
          name="email" 
          class="auth-input" 
          placeholder="Enter your email"
          value="<%= typeof email !== 'undefined' ? email : '' %>"
          required 
          autocomplete="email"
        />
      </div>

      <div class="auth-input-group">
        <label for="password" class="auth-label">
          <svg class="auth-input-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M15 9.16667V5.83333C15 3.16667 12.8333 1 10.1667 1C7.5 1 5.33333 3.16667 5.33333 5.83333V9.16667M10.1667 14.1667V16.3333M4.16667 19H16.1667C17.2712 19 18.1667 18.1046 18.1667 17V11.3333C18.1667 10.2288 17.2712 9.33333 16.1667 9.33333H4.16667C3.0621 9.33333 2.16667 10.2288 2.16667 11.3333V17C2.16667 18.1046 3.0621 19 4.16667 19Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Password
        </label>
        <input 
          type="password" 
          id="password"
          name="password" 
          class="auth-input" 
          placeholder="Enter your password"
          required 
          autocomplete="current-password"
        />
      </div>

      <button type="submit" class="auth-button auth-button-primary">
        <span>Sign In</span>
        <svg class="auth-button-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </form>

    <div class="auth-footer">
      <p class="auth-footer-text">
        Don't have an account? 
        <a href="/auth/signup" class="auth-link">Create one</a>
      </p>
    </div>
  </div>
</div>

<% if (typeof redirectToRegister !== 'undefined' && redirectToRegister) { %>
  <script>
    setTimeout(() => {
      window.location.href = '/auth/register';
    }, 1500);
  </script>
<% } %>

<style>
