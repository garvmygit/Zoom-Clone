<div class="join-container">
  <div class="join-background">
    <div class="join-gradient"></div>
  </div>
  
  <div class="join-card">
    <div class="join-header">
      <div class="join-logo">
        <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="48" height="48" rx="12" fill="url(#joinGradient)"/>
          <path d="M24 12L32 20H28V28H20V20H16L24 12Z" fill="white"/>
          <path d="M12 32L20 24V28H28V24L36 32L28 40H20L12 32Z" fill="white" opacity="0.8"/>
          <defs>
            <linearGradient id="joinGradient" x1="0" y1="0" x2="48" y2="48" gradientUnits="userSpaceOnUse">
              <stop stop-color="#6366f1"/>
              <stop offset="1" stop-color="#8b5cf6"/>
            </linearGradient>
          </defs>
        </svg>
      </div>
      <h1 class="join-title">Join a Meeting</h1>
      <p class="join-subtitle">Enter the meeting ID and password to join</p>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="join-alert join-alert-error">
        <svg class="join-alert-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M10 0C4.48 0 0 4.48 0 10s4.48 10 10 10 10-4.48 10-10S15.52 0 10 0zm1 15H9v-2h2v2zm0-4H9V5h2v6z" fill="currentColor"/>
        </svg>
        <span><%= error %></span>
      </div>
    <% } %>

    <form id="joinForm" class="join-form">
      <div class="join-input-group">
        <label for="userName" class="join-label">
          <svg class="join-input-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M10 10C12.7614 10 15 7.76142 15 5C15 2.23858 12.7614 0 10 0C7.23858 0 5 2.23858 5 5C5 7.76142 7.23858 10 10 10Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M0 20C0 15.5817 4.47715 12 10 12C15.5228 12 20 15.5817 20 20" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Your Name
          <span class="join-required">*</span>
        </label>
        <input 
          id="userName" 
          type="text" 
          placeholder="Enter your display name" 
          class="join-input"
          required 
          autocomplete="name"
          maxlength="50"
        />
      </div>

      <div class="join-input-group">
        <label for="mid" class="join-label">
          <svg class="join-input-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M2.5 5H17.5C18.3284 5 19 5.67157 19 6.5V13.5C19 14.3284 18.3284 15 17.5 15H2.5C1.67157 15 1 14.3284 1 13.5V6.5C1 5.67157 1.67157 5 2.5 5Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M5 10H15" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
          Meeting ID
        </label>
        <input 
          id="mid" 
          type="text" 
          placeholder="Enter meeting ID" 
          class="join-input"
          required 
          autocomplete="off"
          value="<%= typeof meetingId !== 'undefined' && meetingId ? meetingId : '' %>"
        />
      </div>

      <div class="join-input-group">
        <label for="mpw" class="join-label">
          <svg class="join-input-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M15 9.16667V5.83333C15 3.16667 12.8333 1 10.1667 1C7.5 1 5.33333 3.16667 5.33333 5.83333V9.16667M10.1667 14.1667V16.3333M4.16667 19H16.1667C17.2712 19 18.1667 18.1046 18.1667 17V11.3333C18.1667 10.2288 17.2712 9.33333 16.1667 9.33333H4.16667C3.0621 9.33333 2.16667 10.2288 2.16667 11.3333V17C2.16667 18.1046 3.0621 19 4.16667 19Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          Password
          <span class="join-optional">(optional)</span>
        </label>
        <input 
          id="mpw" 
          type="text" 
          placeholder="Enter password if required" 
          class="join-input"
          autocomplete="off"
          value="<%= typeof password !== 'undefined' && password ? password : '' %>"
        />
      </div>

      <button type="submit" class="join-button join-button-primary">
        <svg class="join-button-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <span>Join Meeting</span>
      </button>
    </form>

    <div class="join-footer">
      <p class="join-footer-text">
        Don't have a meeting ID?
        <a href="/" class="join-link">
          <svg class="join-link-icon" width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M8 2V14M2 8H14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          Create a new meeting
        </a>
      </p>
    </div>
  </div>
</div>

<script>
document.getElementById('joinForm')?.addEventListener('submit', (e) => {
  e.preventDefault();
  const name = document.getElementById('userName').value.trim();
  const id = document.getElementById('mid').value.trim();
  const p = document.getElementById('mpw').value.trim();
  
  if (!name) {
    const alertEl = document.createElement('div');
    alertEl.className = 'join-alert join-alert-error';
    alertEl.innerHTML = `
      <svg class="join-alert-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
        <path d="M10 0C4.48 0 0 4.48 0 10s4.48 10 10 10 10-4.48 10-10S15.52 0 10 0zm1 15H9v-2h2v2zm0-4H9V5h2v6z" fill="currentColor"/>
      </svg>
      <span>Please enter your name</span>
    `;
    const form = document.getElementById('joinForm');
    form.insertBefore(alertEl, form.firstChild);
    setTimeout(() => alertEl.remove(), 5000);
    return;
  }
  
  if (!id) {
    const alertEl = document.createElement('div');
    alertEl.className = 'join-alert join-alert-error';
    alertEl.innerHTML = `
      <svg class="join-alert-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
        <path d="M10 0C4.48 0 0 4.48 0 10s4.48 10 10 10 10-4.48 10-10S15.52 0 10 0zm1 15H9v-2h2v2zm0-4H9V5h2v6z" fill="currentColor"/>
      </svg>
      <span>Please enter a meeting ID</span>
    `;
    const form = document.getElementById('joinForm');
    form.insertBefore(alertEl, form.firstChild);
    setTimeout(() => alertEl.remove(), 5000);
    return;
  }
  
  const url = '/meet/' + id + '?name=' + encodeURIComponent(name) + (p ? '&p=' + encodeURIComponent(p) : '');
  window.location.href = url;
});
</script>

