<section class="container mx-auto px-4 py-16 max-w-lg page-enter">
  <div class="glass rounded-2xl p-8">
    <h2 class="text-3xl font-semibold mb-2 text-center">Join a Meeting</h2>
    <p class="text-gray-400 text-center mb-8">Enter the meeting ID and password to join</p>
    
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="mb-6 p-4 bg-red-900/40 border border-red-700 rounded-lg">
        <div class="flex items-center gap-2">
          <i class="fas fa-exclamation-circle text-red-400"></i>
          <p class="text-red-300"><%= error %></p>
        </div>
      </div>
    <% } %>
    
    <form id="joinForm" class="space-y-4">
      <div>
        <label for="userName" class="block text-sm font-medium mb-2">Your Name <span class="text-red-400">*</span></label>
        <input 
          id="userName" 
          type="text" 
          placeholder="Enter your display name" 
          class="w-full p-3 bg-gray-800/50 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" 
          required 
          autocomplete="name"
          maxlength="50"
        />
      </div>
      <div>
        <label for="mid" class="block text-sm font-medium mb-2">Meeting ID</label>
        <input 
          id="mid" 
          type="text" 
          placeholder="Enter meeting ID" 
          class="w-full p-3 bg-gray-800/50 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" 
          required 
          autocomplete="off"
          value="<%= typeof meetingId !== 'undefined' && meetingId ? meetingId : '' %>"
        />
      </div>
      <div>
        <label for="mpw" class="block text-sm font-medium mb-2">Password <span class="text-gray-500 text-xs">(optional)</span></label>
        <input 
          id="mpw" 
          type="text" 
          placeholder="Enter password if required" 
          class="w-full p-3 bg-gray-800/50 border border-gray-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent" 
          autocomplete="off"
          value="<%= typeof password !== 'undefined' && password ? password : '' %>"
        />
      </div>
      <button type="submit" class="btn btn-primary w-full">
        <i class="fas fa-sign-in-alt mr-2"></i>Join Meeting
      </button>
    </form>
    
    <div class="mt-6 text-center">
      <p class="text-sm text-gray-400">Don't have a meeting ID?</p>
      <a href="/" class="text-indigo-400 hover:text-indigo-300 text-sm mt-2 inline-block">
        <i class="fas fa-plus mr-1"></i>Create a new meeting
      </a>
    </div>
  </div>
</section>

<script>
document.getElementById('joinForm')?.addEventListener('submit', (e) => {
  e.preventDefault();
  const name = document.getElementById('userName').value.trim();
  const id = document.getElementById('mid').value.trim();
  const p = document.getElementById('mpw').value.trim();
  
  if (!name) {
    alert('Please enter your name');
    return;
  }
  
  if (!id) {
    alert('Please enter a meeting ID');
    return;
  }
  
  const url = '/meet/' + id + '?name=' + encodeURIComponent(name) + (p ? '&p=' + encodeURIComponent(p) : '');
  window.location.href = url;
});
</script>






