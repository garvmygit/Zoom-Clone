<section class="container mx-auto px-4 py-16 max-w-md">
  <h2 class="text-2xl font-semibold mb-6">Create account</h2>
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="mb-4 p-3 bg-red-900/40 border border-red-700 rounded"><%= error %></div>
  <% } %>
  <form action="/auth/signup" method="post" class="space-y-4">
    <input type="text" name="name" placeholder="Name" class="w-full p-3 bg-gray-800 rounded" required />
    <input type="email" name="email" placeholder="Email" class="w-full p-3 bg-gray-800 rounded" required />
    <input type="password" name="password" placeholder="Password" class="w-full p-3 bg-gray-800 rounded" required />
    <button class="w-full p-3 bg-indigo-600 rounded hover:bg-indigo-500">Sign up</button>
  </form>
  <p class="mt-3 text-sm">Have an account? <a class="text-indigo-400" href="/auth/login">Login</a></p>
</section>





